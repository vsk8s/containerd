#!/bin/sh

set -ex

systemctl status containerd

dh_auto_configure -O--buildsystem=golang -O--builddirectory=_build

# overlayfs not work in lxc
find _build/ -name snapshotter_default_linux.go -exec sed -i 's|DefaultSnapshotter = "overlayfs"|DefaultSnapshotter = "native"|g' {} +
DH_GOLANG_BUILDPKG=github.com/containerd/containerd/integration/client dh_auto_test -O--buildsystem=golang -O--builddirectory=_build -- -c

./_build/client.test -test.v -test.root -address=/run/containerd/containerd.sock
